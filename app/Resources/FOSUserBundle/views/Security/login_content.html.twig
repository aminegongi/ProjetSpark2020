{% trans_default_domain 'FOSUserBundle' %}
<div id="user-popUp" class="user-popUp mfp-with-anim " >
<div class="sc_tabs sc_tabs sc_tabs_style_1 sc_tabs_effects" style="display: block">
    <ul class="sc_tabs_titles" >
        <li style="background-color: #e2ffb0"><a href="#loginForm" class="loginFormTab">Bienvenue de nouveau !</a></li>
        <li style="background-color: #e2ffb0"><a href="#registerForm" class="registerFormTab">faisons connaisance !</a></li>
    </ul>

    <div class="sc_tabs_array">
        <div id="loginForm" class="formItems loginFormBody sc_columns_2" >
            <h5 class="sc_title sc_title_style_3 sc_title_center margin_bottom_10">On se connaît déjà ? <br>
                Alors identifiez-vous, et bienvenue à nouveau! </h5>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{path("fos_user_security_check")}}" method="post" name="login_form" class="formValid">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="sc_columns_item">
                    <input type="hidden" name="redirect_to" value="#" />
                    <ul class="formList">



                        <li class="formLogin"><input  type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="username"/></li>

                        <li class="formPass"><input type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="password"/></li>


                        <li class="remember">
                            <a href="#" class="forgotPwd"></a>
                            <input type="checkbox" value="forever" id="rememberme" name="rememberme">
                            <label for="rememberme">Se souvenir de moi</label>
                        </li>
                        <li class="formButton"><input class="sendEnter enter sc_button sc_button_skin_global sc_button_style_bg sc_button_size_medium" type="submit" id="_submit" name="_submit" value="{{ 'login'|trans }}" /></li>
                    </ul>
                </div>

                <div class="sc_columns_item">
                    <ul class="formList">
                        <li>Connectez-vous directement grâce à vos réseaux sociaux</li>
                        <li class="loginSoc">
                            <a href="#" class="iconLogin fb icon-facebook"></a>
                            <a href="#" class="iconLogin tw icon-twitter"></a>
                            <a href="#" class="iconLogin gg icon-gplus"></a>
                        </li>
                        <li><a href="#">J'ai oublié mon mot de passe !</a></li>
                    </ul>
                </div>
                <div class="sc_result result sc_infobox sc_infobox_closeable"></div>
            </form>
        </div>

        <div id="registerForm" class="formItems registerFormBody sc_columns_2" align="center">
            <h5 class="sc_title sc_title_style_3 sc_title_center margin_bottom_10">C'est la première fois que vous accédez à notre site web?<br>Alors faisons connaissance! </h5>

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {% set var = "Nom d'utilisateur" %}
            <div class="sc_columns_item" align="center">
                <input type="hidden" name="redirect_to" value="#" />
                <ul class="formList" >

                    <li class="formLogin">{{ form_widget(form.email, {'attr':{'class':'email', 'name':'email', 'placeholder':'Votre e-mail'}}) }}</li>
                    <li class="formLogin">{{ form_widget(form.username, {'attr':{'class':'', 'name':'username','placeholder':var}}) }}</li>
                    <li class="i-agree">
                        {{ form_widget(form.termsOfUse, {'attr':{'class':'', 'name':'termsOfUse'}}) }}
                        <label for="i-agree">j'accepte</label> <a href="#">Termes et conditions</a>
                    </li>
                </ul>

            </div>
            <div class="sc_columns_item">
                <ul class="formList">

                    <li class="formLogin">{{ form_widget(form.plainPassword.first, {'attr':{'class':'','type':'password', 'placeholder':'Mot de passe'}}) }}</li>
                    <li class="formLogin">{{ form_widget(form.plainPassword.second, {'attr':{'class':'','type':'passwor','placeholder':'Retapez le mot de passe'}}) }}</li>
                    <li><input type="submit" class="sendEnter enter sc_button sc_button_skin_dark sc_button_style_bg sc_button_size_medium" value="Valider" onClick="this.disabled=true; this.value='Sending…'; this.form.submit();" /></li>

                </ul>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
</div>

