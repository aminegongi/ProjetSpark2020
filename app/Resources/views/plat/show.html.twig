{% extends 'backOffice/index.html.twig' %}

{% block body %}


    <div class="user-data m-b-30">
        <h3 class="title-3 m-b-30">
           </i>Détails du plat</h3>

        <div class="table-responsive table-data" >
            <table class="table">
                <thead>
                <tr>
                    <td>id</td>
                    <td>nom</td>
                    <td>specialité</td>
                    <td>type</td>

                    <td>Difficulte</td>
                    <td>Temps Prep.</td>
                    <td>Temps Cuiss.</td>
                    <td>HFR</td>
                    <td>Meteo</td>
                    <td>Humeur</td>

                    <td>A éviter</td>
                    <td>A reccomander</td>
                    <td>Unité</td>
                    <td>portion</td>

                    <td></td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        <div class="table-data__info">
                            {{plat.id}}
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.nom }}</h6>
                        </div>
                    </td>

                    <td>
                        <div class="table-data__info">
                            <img height="40" width="40" src="{{ asset(plat.specialite.image) }}">
                        </div>
                    </td>

                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.type.nom }}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.difficulte }}</h6>
                        </div>
                    </td>
                    <td >
                        <div class="table-data__info">
                            <h6>{{ plat.tempsPrepa }}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.tempsCuisson }}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.hfr }}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.meteo }}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{% for hist in plat.humeur %}
                                    {{ hist.getNom }}
                                {% endfor %}</h6>
                        </div>
                    </td>

                    <td>
                        <div class="table-data__info">
                            <h6>{% for hist in plat.aEviter %}
                                    {{ hist.getNomMaladie }}
                                {% endfor %}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{% for hist in plat.aReccomander %}
                                {{ hist.getNomMaladie }}
                                {% endfor %}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.nomPortion }}</h6>
                        </div>
                    </td>
                    <td>
                        <div class="table-data__info">
                            <h6>{{ plat.nbrPortion }}</h6>
                        </div>
                    </td>



                </tr>

                </tbody>
            </table>


    </div>
        <br>

        <div class="row">

            <div class="col">
                <section class="card">
                    <div class="card-body text-secondary">
                        <h4>Description : </h4><br>
                        <p style="">{{ plat.description |nl2br }}</p>
                    </div>
                </section>
            </div>

        </div>
        <div class="row">
            <div class="col">
                <section class="card">
                    <div class="card-body text-secondary">
                        <h4>Préparation : </h4><br>
                        <p style="">{{ plat.preparation | nl2br }}</p>
                    </div>
                </section>
            </div>
        </div>
        <div class="row">

            <div class="col">
                <section class="card">
                    <div class="card-body text-secondary">
                        <h4>Ingrédients : </h4><br>
                        <p style="">{{ plat.ingredient |nl2br }}</p>
                    </div>
                </section>
            </div>

        </div>
        <div class="row">

            <div class="col">
                <section class="card">
                    <div class="card-body text-secondary">
                        <h4>Notes : </h4><br>
                        <p style="">
                            {% for hist in plat.note %}
                               * {{ hist.getNom }} <br>
                            {% endfor %}
                        </p>
                    </div>
                </section>
            </div>

        </div>
        <div class="row">

            <div class="col">
                <section class="card">
                    <div class="card-body text-secondary">
                        <h4>ustensiles : </h4><br>
                        <p style="">
                            {% for hist in plat.ustensiles %}
                               * {{ hist.getNom }} <br>
                            {% endfor %}
                        </p>
                    </div>
                </section>
            </div>

        </div>

        <h3 align="center"> <h3 class="title-3 m-b-30">
                </i>Images</h3></h3>
        <br>
        <table >
            <tbody  >
            <div style="">
                {% if plat.image0 is not null %}<th><img src="{{ asset(plat.image0) }}" style="padding-right: 25px;"></th>{% endif %}
                {% if plat.image1 is not null %}<th><img src="{{ asset(plat.image1) }}" style="padding-right: 25px;"></th>{% endif %}
                {% if plat.image2 is not null %}<th><img src="{{ asset(plat.image2) }}" style="padding-right: 25px;"></th>{% endif %}
                {% if plat.image3 is not null %}<th><img src="{{ asset(plat.image3) }}" style="padding-right: 25px;"></th>{% endif %}
                {% if plat.image4 is not null %}<th><img src="{{ asset(plat.image4) }}" style="padding-right: 25px;"></th>{% endif %}
            </div>

            </tbody>

        </table>
        <div class="user-data__footer">
            <a class="au-btn au-btn-load" style="color: white" href="{{ path('plat_index') }}">Revenir a la liste</a>
        </div>
    </div>






   {% endblock %}
