
{% extends 'frontOffice/base.html.Twig' %}

{% block stylesheets %}
        {{ parent() }}
        <link rel='stylesheet' href='{{ asset('css/styleRechercheAv.css') }}' type='text/css' media='all' />
        <script src="https://kit.fontawesome.com/cafc6f169f.js" crossorigin="anonymous"></script>
        <link rel='stylesheet' href='{{ asset('css/flags.css') }}' type='text/css' media='all' />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}
{% block divType %}wrap fullWidth menuStyle1 menuSmartScrollShow bodyStyleFullWide menuStyleFixed visibleMenuDisplay logoImageStyle logoStyleBG{% endblock %}
{% block content %}
    <div class="topTitle subCategoryStyle2">
        <div class="subCategory">
            <h4 class="categoryTitle main">à la Recherche de votre plat idéal...</h4>
        </div>
    </div>
    <div class="content">


        <form id="regForm" action="{{ path('plat_rec') }}" method="GET" style="padding: 0px; width: 80%;">
            <h4> Alors vous cherchez un plat , repondez à ces qq questions : </h4>
            <br>

            <!-- One "tab" for each step in the form: -->
            <div class="tab">
                <h3>La Météo :</h3>
                <div class="row">
                    <div class="column" style="background-color:transparent;">
                        <input type="checkbox" id="myCheckbox1" name="cold" />
                        <label class="labelWeather" style="height: auto;" for="myCheckbox1">
                            <img alt="Froid" src="{{ asset('gifRechAvanc/froid.gif') }}">
                            <h5>il fait Froid</h5>
                        </label>
                    </div>

                    <div class="column" style="background-color:transparent;">
                        <input type="checkbox" id="myCheckbox2" name="hot" />
                        <label class="labelWeather" style="height: auto;" for="myCheckbox2">
                            {#<i class="fas fa-sun fa-3x" style="color: orange;"></i>#}
                            <img alt="Froid" src="{{ asset('gifRechAvanc/chaud.gif') }}">
                            <h5>il fait Chaud</h5>
                        </label>
                    </div>

                </div>

                <h3>Comment vous sentez-vous aujourd'hui ?</h3>
                <div class="row  justify-content-center ">
                    <div class="col-lg-2 col-md-4 col-sm-6">

                        <div class="column" style="background-color:transparent;" >
                            <input type="checkbox" id="myCheckbox3" name="happy" />
                            <label class="labelWeather" style="height: auto;" for="myCheckbox3">
                                <img alt="Froid" src="{{ asset('gifRechAvanc/happy.gif') }}">
                                <h5>Happy</h5>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
