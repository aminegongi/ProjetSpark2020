{% extends "backOffice/index.html.twig" %}
{% block body %}
    <!-- Fontfaces CSS-->
    <link href="{{ asset('css/font-face.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/font-awesome-4.7/css/font-awesome.min.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/font-awesome-5/css/fontawesome-all.min.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/mdi-font/css/material-design-iconic-font.min.css') }}" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="{{ asset('vendor/bootstrap-4.1/bootstrap.min.css') }}" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    {#<link href="vendor/animsition/animsition.min.css" rel="stylesheet" media="all">#}
    <link href="{{ asset('vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/wow/animate.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/css-hamburgers/hamburgers.min.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/slick/slick.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/select2/select2.min.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('vendor/perfect-scrollbar/perfect-scrollbar.css') }}" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="{{ asset('css/theme.css') }}" rel="stylesheet" media="all">
    <div style="margin-right: 5%;margin-left: 5%;">

        <div class="table-data__tool">
            <div class="table-data__tool-left">


                <h3 class="title-5 m-b-35">Liste des Plats</h3>
            </div>
            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" href="{{ path('plat_new') }}">
                    <i class="zmdi zmdi-plus"></i>Ajouter un plat</a>

            </div>
        </div>

        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                <tr>
                    <th>N°</th>
                    <th>Nom</th>
                    <th>Specialité</th>

                </tr>
                </thead>
                <tbody>
                {% for plat in plats %}
                    <tr class="tr-shadow">

                        <td>{{loop.index}}</td>

                        <td>{{plat.nom}}</td>

                        <td><img src="{{ asset(plat.specialite.image) }}" style="height: 30px;"></td>

                        <td>
                            <div class="table-data-feature" >

                                <a class="item" data-toggle="tooltip" data-placement="top" title="Edit" href="{{  path('plat_edit', {'id':plat.id}) }}">
                                    <i class="zmdi zmdi-edit"></i>
                                </a>
                                <a class="item" data-toggle="tooltip" data-placement="top" title="Delete" href="{{  path('plat_delete', {'id':plat.id}) }}">
                                    <i class="zmdi zmdi-delete"></i>
                                </a>
                                <a class="" data-toggle="tooltip" data-placement="" title="show" style="margin-left: 10%;" href="{{  path('plat_show', {'id':plat.id}) }}"> show</a>

                            </div>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

